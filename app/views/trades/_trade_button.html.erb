  <% if current_user.like?(item) %>
  <%= form_with(model: current_user.trades.find_by(item_id: item.id), local: true, class: "d-inline", method: :delete) do |f| %>
      <%= hidden_field_tag :item_id, item.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.trades.build, local: true, class: "d-inline", method: :post) do |f| %>
      <%= hidden_field_tag :item_id, item.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-sm' %>
    <% end %>
  <% end %>